---
// Portfolio/Work section component
const projects = [
  {
    title: "Break A Leg",
    category: "UX/UI Design • Development",
    description: "Building a vibrant website that connects audiences with live theatre shows—making culture more accessible and engaging.",
    image: "/api/placeholder/600/400",
    tags: ["Web Design", "Development", "Entertainment"]
  },
  {
    title: "Black Friday by Intellect",
    category: "UX/UI Design • Development",
    description: "Launching a bold campaign that drives engagement and sales—bringing exclusive Black Friday offers to the spotlight.",
    image: "/api/placeholder/600/400",
    tags: ["Campaign", "E-commerce", "Marketing"]
  },
  {
    title: "Pay Forward Foundation",
    category: "UX/UI Design • Development",
    description: "Creating a clean and confident digital presence that reflects Pay Forward's mission.",
    image: "/api/placeholder/600/400",
    tags: ["Non-profit", "Web Design", "Branding"]
  },
  {
    title: "Compliance Navi",
    category: "UX/UI Design • Development",
    description: "Designing a clear, trustworthy website that helps businesses navigate AML and compliance with confidence and ease.",
    image: "/api/placeholder/600/400",
    tags: ["FinTech", "Compliance", "B2B"]
  }
];
---

<section id="work" class="py-24 bg-black">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Section header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-16">
      <div>
        <h2 class="text-4xl md:text-6xl font-black mb-4">
          Our <span class="gradient-text">Work</span>
        </h2>
        <p class="text-xl text-gray-300 max-w-2xl">
          Discover the digital experiences we've crafted for brands around the world.
        </p>
      </div>
      <div class="mt-8 md:mt-0">
        <a 
          href="#" 
          class="inline-flex items-center border border-green-500 text-green-400 hover:bg-green-500 hover:text-black px-6 py-3 rounded-full font-semibold transition-all duration-300"
        >
          See All Work
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
    
    <!-- Projects grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {projects.map((project) => (
        <article class="group relative bg-gray-900/50 rounded-3xl overflow-hidden hover-lift transition-all duration-500">
          <!-- Project image -->
          <div class="relative h-80 bg-gradient-to-br from-green-500/20 to-blue-500/20 flex items-center justify-center">
            <div class="w-32 h-32 bg-gray-700 rounded-2xl flex items-center justify-center">
              <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <!-- Overlay on hover -->
            <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
              <span class="text-white font-semibold">View Project</span>
            </div>
          </div>
          
          <!-- Project info -->
          <div class="p-8">
            <div class="mb-3">
              <span class="text-green-400 text-sm font-medium">{project.category}</span>
            </div>
            <h3 class="text-2xl font-bold mb-4 text-white group-hover:text-green-400 transition-colors duration-300">
              {project.title}
            </h3>
            <p class="text-gray-300 leading-relaxed mb-6">
              {project.description}
            </p>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="px-3 py-1 bg-gray-800 text-gray-300 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </div>
          
          <!-- Hover border effect -->
          <div class="absolute inset-0 rounded-3xl border-2 border-transparent group-hover:border-green-500/50 transition-colors duration-300 pointer-events-none"></div>
        </article>
      ))}
    </div>
    
    <!-- Portfolio stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-24 pt-16 border-t border-gray-800">
      <div class="text-center">
        <div class="text-4xl font-black gradient-text mb-2">150+</div>
        <div class="text-gray-400">Projects Delivered</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-black gradient-text mb-2">50+</div>
        <div class="text-gray-400">Happy Clients</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-black gradient-text mb-2">9</div>
        <div class="text-gray-400">Years Experience</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-black gradient-text mb-2">37</div>
        <div class="text-gray-400">Awards Won</div>
      </div>
    </div>
  </div>
</section>
