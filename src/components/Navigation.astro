---
// Navigation component
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-sm border-b border-gray-800">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold gradient-text">
          Fundamental
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#work" class="text-gray-300 hover:text-green-400 transition-colors duration-300 font-medium">
            Work
          </a>
          <a href="#services" class="text-gray-300 hover:text-green-400 transition-colors duration-300 font-medium">
            Services
          </a>
          <a href="#culture" class="text-gray-300 hover:text-green-400 transition-colors duration-300 font-medium">
            Culture
          </a>
          <a href="#blog" class="text-gray-300 hover:text-green-400 transition-colors duration-300 font-medium">
            Blog
          </a>
          <a href="#contact" class="bg-green-500 hover:bg-green-400 text-black px-6 py-2 rounded-full font-semibold transition-all duration-300 hover:scale-105">
            Contact Us
          </a>
        </div>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-300 hover:text-white focus:outline-none focus:text-white">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden hidden bg-black/95 backdrop-blur-sm">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="#work" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Work</a>
      <a href="#services" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Services</a>
      <a href="#culture" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Culture</a>
      <a href="#blog" class="text-gray-300 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Blog</a>
      <a href="#contact" class="bg-green-500 text-black block px-3 py-2 rounded-md text-base font-medium mx-3 text-center">Contact Us</a>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close mobile menu when clicking on links
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
